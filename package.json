{
  "name": "arcade-board-tracker",
  "version": "1.0.0",
  "description": "A web application for tracking motherboard components for arcade gaming machines",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "test": "jest --setupFilesAfterEnv ./tests/setup/dbMock.js",
    "test:watch": "jest --watch --setupFilesAfterEnv ./tests/setup/dbMock.js",
    "test:coverage": "jest --coverage",
    "test:all": "node scripts/runTests.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'Build step complete'"
  },
  "keywords": [
    "arcade",
    "motherboard",
    "tracking",
    "repair"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.8.7",
    "multer": "^2.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  }
}
